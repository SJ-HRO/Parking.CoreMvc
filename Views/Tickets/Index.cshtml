@model IEnumerable<Parking.CoreMvc.Models.Ticket>

<div class="container mt-4">
    <h2>Tickets</h2>

    <p class="mb-3">
        <a asp-action="Create" class="btn btn-primary me-2">Registrar entrada</a>
        <a asp-action="EnEspera" class="btn btn-outline-warning">Tickets en espera</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Placa</th>
                <th>Estado</th>
                <th>Entrada</th>
                <th>Plaza</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Id</td>
                    <td>@t.Placa</td>
                    <td>@t.Estado</td>
                    <td>@t.HoraEntrada</td>
                    <td>@(t.PlazaId.HasValue? t.PlazaId.ToString() : "En espera")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-sm btn-link">
                            Detalle
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
