@model Parking.CoreMvc.Models.Ticket

<div class="container mt-4">
    <h2>Registrar entrada</h2>

    <form asp-action="Create" method="post" class="mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Placa" class="form-label"></label>
            <input asp-for="Placa" class="form-control" />
            <span asp-validation-for="Placa" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TipoVehiculo" class="form-label"></label>
            <select asp-for="TipoVehiculo" class="form-select">
                <option>Auto</option>
                <option>Moto</option>
                <option>Camioneta</option>
            </select>
            <span asp-validation-for="TipoVehiculo" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Crear ticket</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
