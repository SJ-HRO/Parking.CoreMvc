@model Parking.CoreMvc.Models.ComparisonPageViewModel
@{
    ViewData["Title"] = "Comparación Histórico vs Actual";
}

<div class="container mt-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2>Comparación (Histórico vs Estado actual)</h2>
        <a class="btn btn-outline-secondary" href="/Admin/Analytics">Volver a Analítica</a>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.Error))
    {
        <div class="alert alert-danger">@Model.Error</div>
    }

    <form method="post" class="card p-3 mb-4">
        @Html.AntiForgeryToken()

        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Umbral (0.00 - 1.00)</label>
                <input type="number"
                       step="0.01"
                       min="0"
                       max="1"
                       class="form-control"
                       name="Umbral"
                       value="@Model.Umbral.ToString("0.00")" />
                <div class="form-text">Ej: 0.85 = 85%</div>
            </div>
            <div class="col-md-9 text-end">
                <button class="btn btn-primary">Comparar</button>
            </div>
        </div>

        <hr />

        <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width:70px;">A</th>
                        <th>Id</th>
                        <th>Momento</th>
                        <th>Totales</th>
                        <th>Ocupadas</th>
                        <th>Libres</th>
                        <th>Activos</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var h in Model.Ultimos)
                    {
                        <tr>
                            <td class="text-center">
                                <input type="radio" name="AId" value="@h.Id" @(Model.AId == h.Id ? "checked" : "") />
                            </td>
                            <td>@h.Id</td>
                            <td>@h.Momento.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@h.PlazasTotales</td>
                            <td>@h.PlazasOcupadas</td>
                            <td>@h.PlazasLibres</td>
                            <td>@h.TicketsActivos</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>

    @if (Model.Result != null)
    {
        <div class="row g-3">
            <div class="col-md-6">
                <div class="card p-3">
                    <h5>Snapshot A (Histórico: dbo.HistoricoOcupaciones)</h5>
                    <div>Id: <b>@Model.Result.A.Id</b></div>
                    <div>Momento: <b>@Model.Result.A.Momento.ToString("yyyy-MM-dd HH:mm")</b></div>
                    <div>Ocupación: <b>@(((Model.Result.A.OcupacionPct * 100.0)).ToString("0.0"))%</b></div>
                    <div>Ocupadas: <b>@Model.Result.A.PlazasOcupadas</b></div>
                    <div>Libres: <b>@Model.Result.A.PlazasLibres</b></div>
                    <div>Activos: <b>@Model.Result.A.TicketsActivos</b></div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card p-3">
                    <h5>Snapshot B (Actual: dbo.Plazas + dbo.Tickets)</h5>
                    <div>Id: <b>Actual</b></div>
                    <div>Momento: <b>@Model.Result.B.Momento.ToString("yyyy-MM-dd HH:mm")</b></div>
                    <div>Ocupación: <b>@(((Model.Result.B.OcupacionPct * 100.0)).ToString("0.0"))%</b></div>
                    <div>Ocupadas: <b>@Model.Result.B.PlazasOcupadas</b></div>
                    <div>Libres: <b>@Model.Result.B.PlazasLibres</b></div>
                    <div>Activos: <b>@Model.Result.B.TicketsActivos</b></div>
                </div>
            </div>

            <div class="col-12">
                <div class="card p-3">
                    <h5>Resultado (Actual - Histórico)</h5>
                    <p class="text-muted mb-2">
                        Fuente A: <b>dbo.HistoricoOcupaciones</b> &nbsp;|&nbsp;
                        Fuente B: <b>dbo.Plazas</b> + <b>dbo.Tickets</b>
                    </p>
                    @if (Model.Result.BExcedeUmbral)
                    {
                        <div class="alert alert-warning mb-3">
                            Actual excede el umbral: <b>@(((Model.Result.Umbral * 100.0)).ToString("0.0"))%</b>
                        </div>
                    }

                    <ul class="mb-0">
                        <li>Δ Ocupadas: <b>@Model.Result.DeltaOcupadas</b></li>
                        <li>Δ Libres: <b>@Model.Result.DeltaLibres</b></li>
                        <li>Δ Tickets activos: <b>@Model.Result.DeltaTicketsActivos</b></li>
                        <li>Δ Ocupación %: <b>@(((Model.Result.DeltaOcupacionPct * 100.0)).ToString("0.0"))%</b></li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div>